<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainViewFlipper"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    >

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_menu_view"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="socialhour.socialhour.MainMenu"
        tools:showIn="@layout/activity_main_menu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/large_text" />

    </android.support.v4.widget.NestedScrollView>

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/add_menu_view"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="socialhour.socialhour.MainMenu"
        tools:showIn="@layout/activity_main_menu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/large_text_2" />

    </android.support.v4.widget.NestedScrollView>
    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/friends_menu_view"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="socialhour.socialhour.MainMenu"
        tools:showIn="@layout/activity_main_menu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/large_text_3" />

    </android.support.v4.widget.NestedScrollView>
    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/groups_menu_view"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="socialhour.socialhour.MainMenu"
        tools:showIn="@layout/activity_main_menu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/large_text_4" />

    </android.support.v4.widget.NestedScrollView>
    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/settings_menu_view"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="socialhour.socialhour.MainMenu"
        tools:showIn="@layout/activity_main_menu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/large_text_5" />

    </android.support.v4.widget.NestedScrollView>
</ViewFlipper>

