<resources>

    <!-- Base application theme. -->
    <style name="AppTheme_michael" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pastel_red</item>
        <item name="colorPrimaryDark">@color/pastel_orange</item>
        <item name="colorAccent">@color/pastel_yellow</item>
    </style>

    <style name="AppTheme_michael.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
